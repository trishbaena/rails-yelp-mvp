<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-warning"  %>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-success" %>
  <%= button_to "Destroy this restaurant", @restaurant, class: "btn btn-danger", method: :delete %>
</div>
